{
  "manifest_version": 2,
  "name": "Cpextend",
  "short_name": "Cpex",
  "version": "2.3",
  "description": "CoursePowerを使いやすくするChrome拡張です",
  "icons": {
      "16": "16.png",
      "48": "icon.png"
  },

  "applications": {
    "gecko": {
      "id": "cpex@mtsgi",
      "strict_min_version": "53.0"
    }
  },

  "content_scripts": [
      {
        "matches": ["*://*/*"],
        "css": ["style.css"],
        "js": ["jquery.min.js", "cs.js"]
      }
  ],

  "options_ui": {
    "page": "opt.html",
    "chrome_style": false    
  },

  "permissions": [
      "activeTab",
      "storage"
  ]
}